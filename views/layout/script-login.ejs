    $(document).ready(function(){
      $('.ui.dropdown').dropdown();
      $('.ui.checkbox').checkbox(checkit(), '.toggle.button');
      $('.ui.checkbox').click(function () {
        var checked = $('input', this).is(':checked');
        $('span', this).text(checked ? 'Dark Mode' : 'Light Mode');
